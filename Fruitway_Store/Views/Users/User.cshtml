@model Fruitway_Store.Models.ViewModels.EditUserVM

<!-- breadcrumb-section -->
<div class="bg-dark" style="background-color: #051224;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <p class="text-dark">Welcome to Your Profile</p>
                <h4 class="text-dark text-center my-4">Edit Your Information Below</h4>
                <br />
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Fruitway Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('path/to/your/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        .edit-profile-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.95); /* Slightly more opaque */
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.15);
        }

        .form-title {
            margin-bottom: 30px;
            text-align: center;
            font-size: 2.5rem;
            font-weight: 500;
            color: #28a745; /* Primary color */
        }

        .profile-image {
            width: 150px; /* Adjust the size of the profile image */
            height: auto;
            border-radius: 50%;
            margin: 20px auto;
            display: block;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .btn-primary {
            background-color: #28a745; /* Customize your primary color */
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #218838; /* Darker shade for hover effect */
            }

        .text-danger {
            font-size: 0.9rem; /* Slightly smaller font for error messages */
        }

        /* Sidebar styles */
        .sidebar {
            background-color: #f8f9fa; /* Light background for sidebar */
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

            .sidebar .nav-link {
                color: #333;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #e2e6ea;
                    color: #28a745;
                }
    </style>
</head>

<body>

    

    <div class="container-fluid m-5">
        <div class="row">
            <div class="col-md-3">
                <!-- Sidebar -->
                <div class="sidebar">
                    
                    <hr>
                    <!-- Navigation Links -->
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a asp-action="user" asp-controller="Users" class="nav-link active" aria-current="page">
                                <i class="fas fa-user-edit me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="DeleteAccount" asp-controller="Users" class="nav-link">
                                <i class="fas fa-user-slash me-2"></i> Delete Your Account
                            </a>
                        </li>
                    </ul>
                    <hr>
                </div>

                <!-- Font Awesome for social media icons -->
                <script src="https://kit.fontawesome.com/a076d05399.js"></script>
            </div>

            <div class="col-md-8 m-0">
                <div class="edit-profile-container">
                    <h2 class="form-title">Edit Your Profile</h2>

                    <!-- Placeholder for current profile image -->
                   
                    <form class="m-0" method="post" asp-action="user" asp-controller="Users" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label"></label>
                            <input class="form-control" type="hidden" name="UserName" value="@ViewBag.Username" readonly required>

                        </div>
                     
                        
                        <div class="mb-3">
                            <label class="form-label">New Username</label>
                            <input asp-for="NEWUserName" class="form-control" type="text" placeholder="Enter your new username" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">New Email</label>
                            <input asp-for="NEWEmail" class="form-control" type="email" placeholder="Enter your new email" required>
                            <div class="text-danger" id="emailError"></div> <!-- Error message placeholder -->
                        </div>
                     
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <input asp-for="NEWPassword" class="form-control" type="password" placeholder="Enter your new password" required>
                            <div class="text-danger" id="passwordError"></div> <!-- Error message placeholder -->
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>

</html>

<!-- products -->
<div class="product-section mt-50 mb-50">
	<div class="container">
			
		<div class="row">
			<div class="col-md-12">
				<div class="product-filters">
					<ul>
						<li class="active" data-filter="*">All</li>
						@foreach (var item in Model)
						{
							<li data-filter=".@item.Name">@item.Name</li>
						}
					</ul>
				</div>
			</div>
		</div>

		<div class="row product-lists">


			@foreach(var item in Model)
		{
			

				<div class="col-lg-4 col-md-6 text-center @item.Name">
				<div class="single-product-item">
						<div class="product-image">
							<a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id"><img src="@item.ImageUrl"></a>
						</div>
						<h3>@item.Name</h3>
						<p class="product-price"><span>Per Kg</span> @item.Price.ToString("c") </p>
						<form asp-action="AddToshoppingCart" asp-controller="ShappingCart" asp-route-pId="@item.Id" method="post" class="d-inline">
							<button type="submit" class="cart-btn">
								<i class="fas fa-shopping-cart"></i> Add to Cart
							</button>
						</form>

				
				</div>
			</div>
		}
		</div>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Fruitway Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('path/to/your/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .edit-profile-container {
            max-width: 600px;
            margin: 100px auto;
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white */
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            margin-bottom: 30px;
            text-align: center;
            font-size: 2rem;
            color: #333;
        }

        .profile-image {
            width: 150px; /* Adjust the size of the profile image */
            height: auto;
            border-radius: 50%;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-primary {
            background-color: #28a745; /* Customize your primary color */
            border: none;
        }

            .btn-primary:hover {
                background-color: #218838; /* Darker shade for hover effect */
            }

        .text-danger {
            font-size: 0.9rem; /* Slightly smaller font for error messages */
        }
    </style>
</head>

<body>
    <div>
        <div class class=" text-center">
          <br />
            <h1 class="text-dark text-center ">All Products</h1>

        </div>
    </div>

   


                <div>
                    @if (Model != null && Model.Any())
                    {
                        <div class="container py-5">
                            <div class="container m-5">
                                <table class="table">
                                    <h3> @ViewBag.count product </h3>
                                    <thead>
                                        <tr>
                                            <th>ID</th>

                                            <th>Name</th>

                                            <th>Detail</th>

                                            <th>price</th>

                                            <th>Image  </th>

                                            <th>Edit</th>

                                            <th>Delete</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var blogPost in Model)
                                        {
                                            <tr>
                                                <td>@blogPost.Id</td>
                                                <td>@blogPost.Name</td>
                                                <td>@blogPost.Price</td>
                                                <td>@blogPost.Detail</td>
                                                <th>
                                                    <img src="@blogPost.ImageUrl" class="img-thumbnail " style="width:64px; height:64px;" />
                                                </th>
                                              @*   <td>
                                                    <button type="submit" class="btn btn-dark"
                                                            asp-area="" asp-controller="AdminProduct"
                                                            asp-action="Edit" asp-route-id="@blogPost.Id">
                                                        <a asp-area="" asp-controller="AdminProduct"
                                                           asp-action="Edit" asp-route-id="@blogPost.Id">
                                                            Edit
                                                        </a>
                                                    </button>
                                                </td> *@

                                                <td>
                                                    <form method="get" asp-controller="AdminProduct"
                                                          asp-action="Edit"
                                                          asp-route-Id="@blogPost.Id">
                                                        <button class="btn btn-primary" type="submit">Edit</button>

                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" asp-action="Delete"
                                                          asp-controller="AdminProduct"
                                                          asp-route-Id="@blogPost.Id">
                                                        <button class="btn btn-danger" type="submit">Delete</button>

                                                    </form>
                                                </td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>NO Tags Found!</p>
                    }
                    @* <style>
                    table, th, td {
                    border: 1px solid black;
                    border-collapse: collapse;
                    }
                    </style> *@


                </div>

           

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>

</html>






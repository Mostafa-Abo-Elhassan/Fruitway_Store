<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - Fruitway Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('path/to/your/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .edit-profile-container {
            max-width: 600px;
            margin: 100px auto;
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white */
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            margin-bottom: 30px;
            text-align: center;
            font-size: 2rem;
            color: #333;
        }

        .profile-image {
            width: 150px; /* Adjust the size of the profile image */
            height: auto;
            border-radius: 50%;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-primary {
            background-color: #28a745; /* Customize your primary color */
            border: none;
        }

            .btn-primary:hover {
                background-color: #218838; /* Darker shade for hover effect */
            }

        .text-danger {
            font-size: 0.9rem; /* Slightly smaller font for error messages */
        }
    </style>
</head>

<body>

   

           


                <div class="edit-profile-container">
                    <h2 class="form-title">Add User</h2>

                    
                    <form method="post" asp-action="CreateUser" asp-controller="AdminUsers">
                        <div class="form-group">
                            <label asp-for="UserName">Username</label>
                            <input type="text" class="form-control" asp-for="UserName" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input type="email" class="form-control" asp-for="Email" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Password</label>
                            <input type="password" class="form-control" asp-for="Password" required />
                        </div>


                        <div class="form-group">
                            <label>Role</label><br/>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="RoleUser" value="User" checked disabled>
                                <label class="form-check-label" for="RoleUser">User</label>
                            </div>
                            @if (User.IsInRole("Super_Admin"))
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="RoleAdmin" asp-for="checkAdmin">
                                    <label class="form-check-label" for="RoleAdmin">Admin</label>
                                </div>

                            }

                        </div>


                        <button type="submit" class="btn btn-dark">Create User</button>
                        
                    </form>



                </div>




           



    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>

</html>

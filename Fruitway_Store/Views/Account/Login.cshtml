@model Fruitway_Store.Models.ViewModels.LoginVM

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fruitway Store - Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('https://res.cloudinary.com/dfgunzope/image/upload/v1728004075/ylajhszn5abufz3r1pwe.jpg'); /* Add the URL of your fruit image */
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            max-width: 450px;
            background: rgba(255, 255, 255, 0.9); /* Slightly transparent white background */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

            .login-container h3 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 2rem;
                font-weight: bold;
            }

        .form-control {
            border-radius: 10px;
            height: 45px;
            font-size: 1.1rem;
        }

        .btn-custom {
            background-color: #28a745;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-size: 1.2rem;
            width: 100%;
            color: white;
        }

            .btn-custom:hover {
                background-color: #218838;
            }

        .additional-links {
            text-align: center;
            margin-top: 20px;
            font-size: 1rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <!-- Login Form -->
        <h3>Login to Fruitway</h3>
        <form asp-action="Login" method="post">
            <!-- Email Field -->
            <div class="mb-4">
                <label asp-for="UserName" class="form-label">User Name</label>
                <input asp-for="UserName" class="form-control" type="text" placeholder="Enter your UserName" required>
               
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required>
               
            </div>

            <!-- Remember Me and Forgot Password -->
            <div class="remember-me">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
               
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-custom">Login</button>

            <!-- Signup Link -->
            <div class="additional-links">
                <p>Don't have an account? <a asp-action="Register">Sign up here</a></p>
                <p>Back To Home <a asp-action="Index" asp-controller="Home">Home here</a></p>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
